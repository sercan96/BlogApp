@model List<Post>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="row">
        <div class="col-lg-8">
            <div class="bg-white p-4">
                <h1 class="h4 mb-4">Popular Posts</h1>
                @foreach (var post in Model)
                {
                    <div class="card bg-transparent border-0 mb-3">
                        <div class="row">
                            <div class="col-4">
                                <img src="/img/@post.Image" class="img-fluid rounded" width="300px" />
                            </div>
                            <div class="col-8"> 
                                <h5> <a href="#" class="btn-link fw-bold">@post.Title</a></h5>
                                <p>@post.Content</p>
                                <a href="#" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Web Development</a>
                            </div>
                        </div>
                    </div>
                }
                <nav>
                    <ul class="pagination">
                        <li class="page-item"> <a href="#" class="page-link">1</a></li>
                        <li class="page-item"> <a href="#" class="page-link">2</a></li>
                        <li class="page-item"> <a href="#" class="page-link">3</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
</body>

</html>
